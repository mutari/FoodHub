head
    include includes/head.pug
body
    include includes/header.pug

    main 
        #foods
            ul
                each item in items
                    li
                        .card(onclick=`location.href = '/${item._id}';`)
                            img(src=`${item.image}`, alt=`'${item.name}' image`)
                            h3=item.name
                            p=item.discription
                            .tools
                                a(href=`/delete/food/${item._id}`)
                                    i(class="tiny material-icons delete") delete
                                a(href=`/rewrite/food/${item._id}`)
                                    i(class="tiny material-icons create") create
                                a(href=`/save/food/${item._id}`)
                                    i(class="tiny material-icons save") save


    include includes/footer.pug
