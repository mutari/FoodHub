head
    include includes/head.pug
body
    include includes/header.pug

    main
        #profile
            #profileHeader
                h1=username

            #profileInfo
                #profileSide
                    h2 About
                    ul
                        li
                            p.infoName Name
                            p.info=name ? name : "null"
                        li
                            p.infoName Email
                            p.info=email ? email : "null"
                        li
                            p.infoName Phone
                            p.info=phone ? phone : "null"
                        
                        

                #profileMain
                    #foodCreated
                        ul
                            each item in foods
                                li
                                    .card
                                        img(src=`${item.image}`, alt=`'${item.name}' image`, onclick=`location.href = '/get/${item._id}';`)
                                        h3=item.name
                                        p=item.discription
                                        .tools
                                            a(href=`/delete/food/${item._id}`)
                                                i(class="tiny material-icons delete") delete
                                            a(href=`/rewrite/food/${item._id}`)
                                                i(class="tiny material-icons create") create
                                            a(onclick='save("' + item._id + '")')
                                                i(class="tiny material-icons save") save

    include includes/footer.pug